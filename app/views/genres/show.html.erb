<h1> <%= @genre.name.upcase %></h1>
<br> 
<br>
<div> 
<% if @genre.submissions.empty?%>
     There are no submissions! <%= link_to "Make one here.", new_submission_path%>
<%else%>
<% @genre.submissions.each do |submission| %>
<div>
    <%= link_to submission.title, submission_path(submission) %>
    <br> 
    <%= link_to "Written by: #{submission.author.name}", author_path(submission.author) %>
    <br>
    <br>
</div>
<%end%>
<%end%>
</div>