<% if @submission.errors.any?%>
<ul>
<% @submission.errors.full_messages.each do |message| %>
<li> <%= message %> </li>
<% end %>
</ul>
<%end%>

<div class="form">
  <%= form_for @submission do |f| %>
    <%= f.label :title, 'Title: '%>
    <%= f.text_field :title%><br><br>
    <%= f.label :content, 'Content: '%>
    <%= f.text_area :content, cols: "50", rows: "10"%> <br><br>
    <%= f.label :genre_id, 'Genre:'%>
    <%= f.collection_select :genre_id, Genre.all.order('name'), :id, :name %>
    <br>
    <br>
    <%= f.submit %>
  <% end %>
</div>