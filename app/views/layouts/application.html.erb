<!DOCTYPE html>
<html>
  <head>
    <title>ReRev</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= link_to "Home", "/" %>  |  <%= link_to "Authors", authors_path %>  |  <%= link_to "Genres", genres_path %>  |  <%= link_to "Analytics", analytics_path %><br><br>
    <% if logged_in? %>
      <%= form_tag("/sessions", method: :delete) do %>
        <%= submit_tag "Logout" %>  <%= "Hello, #{current_author.pen_name}!" %>
      <% end %>
      <% else %>
      <br>
    <%= link_to "Login", '/sessions/new'%>  |  <%= link_to "Sign Up", new_author_path %>
    <% end %>
    <%= yield %>
  </body>
</html>
