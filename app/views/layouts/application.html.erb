<!DOCTYPE html>
<html>
  <head>
    <title>ReRev</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if logged_in? %>
      <%= form_tag("/sessions", method: :delete) do %>
        <%= submit_tag "Logout" %>
      <% end %>
      <% else %>
      <br>
    <%= link_to "Login", '/sessions/new'%>
      <br>
      <%= link_to "New Here? Create an account", new_author_path %>
    <% end %>
    <%= yield %>
  </body>
</html>
