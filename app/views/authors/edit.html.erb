<h1> Edit Your Account </h1>

<% if @author.errors.any?%>
<ul>
<% @author.errors.full_messages.each do |message| %>
<li>
<%= message %>
</li>
<% end %>
</ul>
<%end%>

<%= form_for @author do |f|%>
<%= f.label :name %>
<%= f.text_field :name%>
<br> 
<br>
<%= f.label :email %>
<%= f.email_field :email%>
<br> 
<br>
<%= f.label :pen_name %>
<%= f.text_field :pen_name%>
<br> 
<br>
<%= f.label :location %>
<%= f.text_field :location%>
<br> 
<br>
<%= f.submit %>

<%end%>