<h1> New Account </h1>

<%= form_for @author do |f|%>
<%= f.label :name %>
<%= f.text_field :name%>
<br> 
<br>
<%= f.label :email %>
<%= f.email_field :email%>
<br> 
<br>
<%= f.label :pen_name %>
<%= f.text_field :pen_name%>
<br> 
<br>
<%= f.label :location %>
<%= f.text_field :location%>
<br> 
<br>
<%= f.label :password %>
<%= f.password_field :password%>
<br> 
<br>
<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation%>
<br> 
<br>
<%= f.submit %>

<%end%>